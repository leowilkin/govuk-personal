---
import BaseLayout from "../layouts/BaseLayout.astro";
import Back from "../components/govuk/Back.astro";
import Phase from "../components/govuk/Phase.astro";
---

<BaseLayout title="Contact">
  <Phase title="Beta" text="This is an actively developed project." />
  <Back link="/" />
	<main class="govuk-main-wrapper app-main-class" id="main-content">
		<h1 class="govuk-heading-xl">Contact Me</h1>
		<p class="govuk-body-l">Get in touch for opportunities or collaborations.</p>
		
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-m">Contact Information</h2>
				<p class="govuk-body">You can reach me through the following channels:</p>
			</div>
		</div>
	</main>
</BaseLayout>
