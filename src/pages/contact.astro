---
import BaseLayout from "../layouts/BaseLayout.astro";
import Accordion from "../components/govuk/Accordion.astro";

const accordionItems = [
  {
    id: 'web-writing',
    title: 'Writing well for the web',
    content: 'This is the content for Writing well for the web.'
  },
  {
    id: 'specialists',
    title: 'Writing well for specialists', 
    content: 'This is the content for Writing well for specialists.'
  },
  {
    id: 'audience',
    title: 'Know your audience',
    content: 'This is the content for Know your audience.'
  }
];
---

<BaseLayout title="Contact">
	<main class="govuk-main-wrapper app-main-class" id="main-content">
		<h1 class="govuk-heading-xl">Contact Me</h1>
		<p class="govuk-body-l">Get in touch for opportunities or collaborations.</p>
		
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-m">Contact Information</h2>
				<p class="govuk-body">You can reach me through the following channels:</p>
				<ul class="govuk-list govuk-list--bullet">
					<li>Email: your.email@example.com</li>
					<li>LinkedIn: Your LinkedIn Profile</li>
					<li>GitHub: Your GitHub Profile</li>
				</ul>
			</div>
		</div>
        <Accordion items={accordionItems} />
	</main>
</BaseLayout>
